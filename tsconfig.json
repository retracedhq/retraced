{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "noImplicitAny": false,
        "noEmitOnError": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "allowJs": true,
        "outDir": "build",
        "pretty": true
    },
    "include": [
        "src/**/*.js",
        "src/**/*.ts",
				"integration/**/*.js",
				"integration/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
